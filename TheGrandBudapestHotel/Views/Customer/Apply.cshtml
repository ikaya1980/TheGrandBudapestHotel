@model Customer

@{
    ViewData["Title"] = "Apply";
}
<h2>Yeni Müşteri Kaydı &nbsp;  
    </h2>
<form asp-action="Apply" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MiddleName"></label>
        <input asp-for="MiddleName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Nationality"></label>

        <select class="form-control" asp-for="Nationality" asp-items="Html.GetEnumSelectList<Nationality>()">
            @*<option selected="selected" value="">Please select</option>*@
        </select>
    </div>
    <div class="form-group">
        <button type="submit" value="Save">Save</button>
    </div>

</form>

